<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @trip.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @trip.description %>
</p>

<table class="table">
  <tr>
    <th>Destination</th>
    <th>Description</th>
  </tr>
  <% @trip.destinations.each do |d| %>
    <tr>
      <td><%= link_to d.name, edit_trip_destination_path(@trip, d) %></td>
      <td><%= d.description %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to 'New Destination', new_trip_destination_path(@trip) %>
</p>

<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
